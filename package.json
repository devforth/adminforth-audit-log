{
  "name": "@adminforth/audit-log",
  "version": "1.0.0",
  "publishConfig": {
    "access": "public"
  },
  "description": "AdminForth plugin for logging all actions (who did what and when)",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "homepage": "https://adminforth.dev/docs/tutorial/Plugins/AuditLog/",
  "repository": {
    "type": "git",
    "url": "https://github.com/devforth/adminforth-audit-log.git"
  },
  "scripts": {
    "build": "tsc && rsync -av --exclude 'node_modules' custom dist/",
    "prepare": "npm link adminforth"
  },
  "author": "devforth",
  "license": "ISC",
  "dependencies": {
    "adminforth": "^2.12.0",
    "dayjs": "^1.11.11"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "semantic-release-slack-bot",
        {
          "notifyOnSuccess": true,
          "notifyOnFail": true,
          "slackIcon": ":package:",
          "markdownReleaseNotes": true
        }
      ]
    ],
    "branches": [
      "main",
      {
        "name": "next",
        "prerelease": true
      }
    ]
  },
  "devDependencies": {
    "@types/node": "^22.10.7",
    "semantic-release": "^24.2.1",
    "semantic-release-slack-bot": "^4.0.2",
    "typescript": "^5.7.3"
  }
}
